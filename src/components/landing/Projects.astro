---
import DataProjects from "../../config/dataProjects.json";
---

<h1 class="text-5xl font-bold my-4 text-center">Projects</h1>

{
    DataProjects.map((dataProjects) => {
        return (
            <div class="flex text-center md:text-left my-4 flex-col md:flex-row gap-4 p-4">
                <div class="flex-1">
                    <h2 class="text-2xl font-bold my-4">{dataProjects.title}</h2>
                    <p class="my-2">{dataProjects.description}</p>
                    <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">More info</button>
                </div>
                <div class="flex-1">
                    <img src={dataProjects.imagen} />
                </div>
            </div>
        );
    })
}
